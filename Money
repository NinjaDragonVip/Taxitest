local RunService = game:GetService("RunService")
local Lighting = game:GetService("Lighting")

-- ฟังก์ชันจำกัด FPS
local function limitFPS(fps)
    RunService.RenderStepped:Connect(function()
        setfpscap(fps)  -- จำกัด FPS ตามค่าที่กำหนด (15)
    end)
end

-- ลดการใช้ RAM ด้วยการลดคุณภาพกราฟิก
local function reduceGraphicsQuality()
    -- เปลี่ยนเทคโนโลยีการเรนเดอร์ให้เรียบง่ายขึ้น
    Lighting.Technology = Enum.Technology.Compatibility

    -- ลดคุณภาพกราฟิกให้อยู่ในระดับต่ำที่สุด
    settings().Rendering.QualityLevel = Enum.QualityLevel.Level01

    -- ปิดเงา
    Lighting.GlobalShadows = false
    Lighting.FogEnd = 100000  -- ปรับหมอกให้ไม่แสดงผล
end

-- เรียกใช้ฟังก์ชันทั้งสอง
limitFPS(15)  -- จำกัด FPS ที่ 15
reduceGraphicsQuality()  -- ลดคุณภาพกราฟิก
